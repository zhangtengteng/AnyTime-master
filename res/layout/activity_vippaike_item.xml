<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

 

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/yellow_ffa500_color" 
            android:layout_margin="2dp"
            android:text="2015年4月8日"
            android:textColor="@color/black" />
  
    <!-- 头像 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <com.diy.widget.CircularImage
            android:id="@+id/cover_user_photo"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/item07" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Dylan Shaw" >
            </TextView>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/name"
                android:background="@color/yellow_f78f2a_color"
                android:text="21" >
            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/year"
                android:text="17:00-18:00" >
            </TextView>

     
        

       
    </LinearLayout>

</LinearLayout>